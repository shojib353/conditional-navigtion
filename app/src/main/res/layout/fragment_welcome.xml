<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_img_welcome"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/view_label_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Welcome"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@id/view_img_welcome"
        app:layout_constraintStart_toStartOf="@id/view_img_welcome"
        app:layout_constraintTop_toBottomOf="@id/view_img_welcome" />

    <Button
        android:id="@+id/view_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="@+id/view_label_welcome"
        app:layout_constraintStart_toStartOf="@+id/view_label_welcome"
        app:layout_constraintTop_toBottomOf="@+id/view_label_welcome" />

</androidx.constraintlayout.widget.ConstraintLayout>